---
// src/components/Footer.astro
// サイトのフッターコンポーネント
// コピーライトとSNSリンクを表示します

import { SOCIAL_LINKS, SITE_TITLE } from '../consts';

// 現在の日付を取得（年を表示するため）
const today = new Date();
---

<footer>
	<div class="footer-content">
		{/* コピーライト表示（現在の年を自動取得） */}
		<p>&copy; {today.getFullYear()} {SITE_TITLE}</p>
		{/* SNSリンク（X/Twitterのみ） */}
		<div class="social-links">
			<a href={SOCIAL_LINKS.twitter} target="_blank" rel="noopener noreferrer">
				<span class="sr-only">Follow on X (Twitter)</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="20" height="20">
					<path
						fill="currentColor"
						d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865l8.875 11.633Z"
					></path>
				</svg>
			</a>
		</div>
	</div>
</footer>
<style>
	/* フッターのスタイル */
	footer {
		padding: 3em 0;
		border-top: 1px solid var(--color-border);
		margin-top: 4em;
	}
	
	.footer-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
		max-width: 960px;
		margin: 0 auto;
		padding: 0 1em;
	}
	
	footer p {
		margin: 0;
		color: var(--color-text-light);
		font-size: 0.9rem;
	}
	
	/* SNSリンクのレイアウト */
	.social-links {
		display: flex;
		align-items: center;
	}
	
	.social-links a {
		display: flex;
		align-items: center;
		color: var(--color-text-light);
		transition: color 0.2s ease;
	}
	
	.social-links a:hover {
		color: var(--color-primary);
	}
	
	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border-width: 0;
	}
	
	/* レスポンシブ対応 */
	@media (max-width: 768px) {
		footer {
			padding: 2em 0;
			margin-top: 3em;
		}
		
		.footer-content {
			flex-direction: column;
			gap: 1em;
			text-align: center;
		}
	}
	
	@media (max-width: 480px) {
		footer {
			padding: 1.5em 0;
		}
		
		footer p {
			font-size: 0.85rem;
		}
	}
</style>
