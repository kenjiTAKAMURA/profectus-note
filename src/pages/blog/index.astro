---
// src/pages/blog/index.astro
// ブログ一覧ページ（ルートパス: /blog）
// すべてのブログ記事を日付順（新しい順）で一覧表示します

// Astroの組み込み機能をインポート
import { Image } from 'astro:assets'; // 画像最適化コンポーネント
import { getCollection } from 'astro:content'; // Content Collectionsから記事を取得

// コンポーネントのインポート
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro'; // 日付フォーマット用
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE, CATEGORIES } from '../../consts';

// ブログ記事を取得して日付順（新しい順）にソート
// getCollection('blog')でsrc/content/blog/内のすべての記事を取得
// sort()で公開日（pubDate）の降順にソート
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// heroImageが文字列（publicフォルダのパス）か、画像オブジェクトかを判定するヘルパー関数
// TypeScriptの型ガード関数（型安全性を保証）
const isStringPath = (img: unknown): img is string => typeof img === 'string';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			section h1 {
				font-size: 2rem;
				margin-bottom: 2rem;
				font-weight: 600;
			}
			
			@media (max-width: 768px) {
				section h1 {
					font-size: 1.75rem;
				}
			}
			
			@media (max-width: 480px) {
				section h1 {
					font-size: 1.5rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h1>Blog</h1>
				{/* 記事一覧を表示 */}
				<ul class="post-list">
					{
						// 各記事をループして表示
						posts.map((post) => (
							<li>
								{/* 記事へのリンク */}
								<a href={`/blog/${post.id}/`}>
									{/* 記事タイトル */}
									<h2 class="post-title">{post.data.title}</h2>
									{/* 記事の説明文 */}
									{post.data.description && (
										<p class="post-description">{post.data.description}</p>
									)}
									{/* メタ情報 */}
									<div class="post-meta">
										{/* 公開日 */}
										<p class="post-date">
											<FormattedDate date={post.data.pubDate} />
										</p>
										{/* カテゴリと攻め/守りバッジ */}
										{CATEGORIES[post.data.category] && (
											<span class="category-badge">{CATEGORIES[post.data.category].name}</span>
										)}
										{post.data.attackOrDefense === 'attack' && (
											<span class="badge-attack">攻め</span>
										)}
										{post.data.attackOrDefense === 'defense' && (
											<span class="badge-defense">守り</span>
										)}
										{post.data.attackOrDefense === 'both' && (
											<span class="badge-both">攻め・守り</span>
										)}
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
