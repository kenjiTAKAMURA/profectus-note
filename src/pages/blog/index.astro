---
// src/pages/blog/index.astro
// ブログ一覧ページ（ルートパス: /blog）
// すべてのブログ記事を日付順（新しい順）で一覧表示します

// Astroの組み込み機能をインポート
import { Image } from 'astro:assets'; // 画像最適化コンポーネント
import { getCollection } from 'astro:content'; // Content Collectionsから記事を取得

// コンポーネントのインポート
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro'; // 日付フォーマット用
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE, CATEGORIES } from '../../consts';

// ブログ記事を取得して日付順（新しい順）にソート
// getCollection('blog')でsrc/content/blog/内のすべての記事を取得
// sort()で公開日（pubDate）の降順にソート
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// heroImageが文字列（publicフォルダのパス）か、画像オブジェクトかを判定するヘルパー関数
// TypeScriptの型ガード関数（型安全性を保証）
const isStringPath = (img: unknown): img is string => typeof img === 'string';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			section h1 {
				font-size: 2rem;
				margin-bottom: 2rem;
				font-weight: 600;
			}
			
			/* カテゴリフィルターセクション */
			.filter-section {
				margin-bottom: 2rem;
			}
			
			.filter-group {
				margin-bottom: 1.5rem;
			}
			
			.filter-group-title {
				font-size: 0.875rem;
				font-weight: 600;
				color: var(--color-text-light);
				margin-bottom: 0.75rem;
				text-transform: uppercase;
				letter-spacing: 0.05em;
			}
			
			.filter-buttons {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5rem;
			}
			
			.filter-button {
				padding: 0.5rem 1rem;
				border: 1px solid var(--color-border);
				background-color: var(--color-background);
				color: var(--color-text);
				border-radius: 0.25rem;
				font-size: 0.875rem;
				font-weight: 500;
				cursor: pointer;
				transition: all 0.2s ease;
			}
			
			.filter-button:hover {
				background-color: var(--color-primary);
				color: white;
				border-color: var(--color-primary);
			}
			
			.filter-button.active {
				background-color: var(--color-primary);
				color: white;
				border-color: var(--color-primary);
			}
			
			.filter-button.category {
				font-size: 0.8125rem;
			}
			
			/* 記事リストのフィルタリング */
			.post-list li {
				transition: opacity 0.3s ease, transform 0.3s ease;
			}
			
			.post-list li.hidden {
				display: none;
			}
			
			.no-results {
				text-align: center;
				padding: 3rem 1rem;
				color: var(--color-text-light);
			}
			
			.no-results p {
				margin: 0;
				font-size: 1.125rem;
			}
			
			@media (max-width: 768px) {
				section h1 {
					font-size: 1.75rem;
				}
				
				.filter-buttons {
					gap: 0.375rem;
				}
				
				.filter-button {
					padding: 0.375rem 0.75rem;
					font-size: 0.8125rem;
				}
			}
			
			@media (max-width: 480px) {
				section h1 {
					font-size: 1.5rem;
				}
				
				.filter-button {
					padding: 0.375rem 0.625rem;
					font-size: 0.75rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h1>Blog</h1>
				
				{/* カテゴリフィルター */}
				<div class="filter-section">
					<div class="filter-group">
						<div class="filter-group-title">カテゴリで絞り込む</div>
						<div class="filter-buttons">
							<button
								class="filter-button category-filter active"
								data-filter-value="all"
								aria-label="すべての記事を表示"
							>
								すべて
							</button>
							{Object.entries(CATEGORIES).map(([categoryKey, categoryInfo]) => (
								<button
									class="filter-button category category-filter"
									data-filter-value={categoryKey}
									aria-label={`${categoryInfo.name}でフィルター`}
								>
									{categoryInfo.name}
								</button>
							))}
						</div>
					</div>
				</div>
				
				{/* 記事一覧を表示 */}
				<ul class="post-list" id="post-list">
					{
						// 各記事をループして表示
						posts.map((post) => {
							const categoryInfo = CATEGORIES[post.data.category];
							return (
								<li data-category={post.data.category}>
									{/* 記事へのリンク */}
									<a href={`/blog/${post.id}/`}>
										{/* 記事タイトル */}
										<h2 class="post-title">{post.data.title}</h2>
										{/* 記事の説明文 */}
										{post.data.description && (
											<p class="post-description">{post.data.description}</p>
										)}
										{/* メタ情報 */}
										<div class="post-meta">
											{/* 公開日 */}
											<p class="post-date">
												<FormattedDate date={post.data.pubDate} />
											</p>
											{/* カテゴリバッジ */}
											{categoryInfo && (
												<span class="category-badge">{categoryInfo.name}</span>
											)}
										</div>
									</a>
								</li>
							);
						})
					}
				</ul>
				
				{/* 結果が見つからない場合のメッセージ */}
				<div class="no-results hidden" id="no-results">
					<p>該当する記事が見つかりませんでした。</p>
				</div>
			</section>
		</main>
		
		{/* フィルタリング用のJavaScript */}
		<script is:inline>
			(function() {
				const postList = document.getElementById('post-list');
				const noResults = document.getElementById('no-results');
				const filterButtons = document.querySelectorAll('.category-filter');
				let activeCategoryFilter = 'all';
				
				// フィルターボタンのクリックイベント
				filterButtons.forEach(button => {
					button.addEventListener('click', function() {
						const filterValue = this.dataset.filterValue;
						activeCategoryFilter = filterValue || 'all';
						
						// カテゴリフィルターボタンのアクティブ状態を更新
						filterButtons.forEach(btn => {
							btn.classList.remove('active');
						});
						this.classList.add('active');
						
						applyFilters();
					});
				});
				
				// フィルターを適用する関数
				function applyFilters() {
					const posts = postList?.querySelectorAll('li') || [];
					let visibleCount = 0;
					
					posts.forEach(post => {
						const category = post.dataset.category;
						let shouldShow = true;
						
						// カテゴリフィルターの適用
						if (activeCategoryFilter !== 'all') {
							shouldShow = category === activeCategoryFilter;
						}
						
						if (shouldShow) {
							post.classList.remove('hidden');
							visibleCount++;
						} else {
							post.classList.add('hidden');
						}
					});
					
					// 結果が見つからない場合のメッセージを表示
					if (noResults) {
						if (visibleCount === 0) {
							noResults.classList.remove('hidden');
						} else {
							noResults.classList.add('hidden');
						}
					}
				}
			})();
		</script>
		<Footer />
	</body>
</html>
