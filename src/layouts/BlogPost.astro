---
// src/layouts/BlogPost.astro
// ブログ記事専用のレイアウト
// 記事のタイトル、日付、ヒーロー画像、本文を表示します

import { Image } from 'astro:assets'; // 画像最適化コンポーネント
import type { CollectionEntry } from 'astro:content'; // Content Collectionsの型
import BaseHead from '../components/BaseHead.astro'; // HTMLの<head>セクション
import Footer from '../components/Footer.astro'; // フッターコンポーネント
import FormattedDate from '../components/FormattedDate.astro'; // 日付フォーマット用
import Header from '../components/Header.astro'; // ヘッダーコンポーネント

// プロップスの型定義（ブログ記事のデータ型）
type Props = CollectionEntry<'blog'>['data'];

// プロップスから値を取得
const { title, description, pubDate, updatedDate, heroImage, tags, category, attackOrDefense, actionItems } = Astro.props;

// heroImageが文字列（publicフォルダのパス）か、画像オブジェクトかを判定
// TypeScriptの型ガード（型安全性を保証）
const isStringPath = typeof heroImage === 'string';

// カテゴリ名と攻め/守りのバッジ表示用
import { CATEGORIES } from '../consts';
const categoryInfo = CATEGORIES[category];
const badgeType = attackOrDefense || categoryInfo?.type || 'both';
---

<!doctype html>
<html lang="ja">
	<head>
		{/* BaseHeadコンポーネントでSEOメタタグを設定（記事メタデータも含む） */}
		<BaseHead
			title={title}
			description={description}
			image={heroImage}
			article={true}
			publishedTime={pubDate}
			modifiedTime={updatedDate}
			tags={tags || []}
		/>
		<style>
			article {
				width: 100%;
			}
			
			/* ヒーロー画像のコンテナ（小さく表示） */
			.hero-image {
				margin-bottom: 2rem;
				text-align: center;
			}
			
			/* ヒーロー画像のスタイル */
			.hero-image img {
				max-width: 100%;
				height: auto;
				border-radius: 8px;
				max-height: 300px;
				object-fit: cover;
			}
			
			/* 記事本文エリアのスタイル */
			.prose {
				max-width: 100%;
				margin: 0 auto;
				color: var(--color-text);
			}
			
			/* タイトルセクションのスタイル */
			.title {
				margin-bottom: 2rem;
				line-height: 1.6;
			}
			
			/* メタ情報のスタイル */
			.meta-info {
				margin-bottom: 1rem;
			}
			
			/* バッジのスタイル */
			.badges {
				display: flex;
				gap: 0.5rem;
				flex-wrap: wrap;
				margin-bottom: 1rem;
			}
			
			/* タイトルのスタイル */
			.title h1 {
				margin: 0.5em 0;
				font-size: 2rem;
				line-height: 1.3;
				font-weight: 600;
			}
			
			/* 記事の説明文 */
			.article-description {
				font-size: 1.125rem;
				color: var(--color-text-light);
				margin: 1em 0;
				line-height: 1.8;
			}
			
			/* 日付のスタイル */
			.date {
				margin-bottom: 0.5em;
				color: var(--color-text-light);
				font-size: 0.9rem;
			}
			
			/* 更新日のスタイル */
			.last-updated-on {
				font-style: italic;
				font-size: 0.85rem;
				margin-top: 0.25em;
			}
			
			/* 区切り線 */
			.title hr {
				border: none;
				border-top: 1px solid var(--color-border);
				margin: 2rem 0;
			}
			
			/* アクションセクションのスタイル */
			.action-section {
				background: linear-gradient(to right, #ebf8ff, #f0fff4);
				border-left: 4px solid var(--color-secondary);
				padding: 1.5rem;
				margin: 3rem 0;
				border-radius: 0 0.5rem 0.5rem 0;
			}
			
			.action-section h2 {
				color: var(--color-secondary);
				margin-top: 0;
				margin-bottom: 1rem;
				font-size: 1.5rem;
			}
			
			.action-intro {
				margin-bottom: 1.5rem;
				color: var(--color-text);
			}
			
			.action-list {
				list-style: none;
				padding: 0;
			}
			
			.action-list li {
				padding: 0.75rem 0;
				padding-left: 2rem;
				position: relative;
				border-bottom: 1px solid rgba(56, 161, 105, 0.2);
			}
			
			.action-list li:last-child {
				border-bottom: none;
			}
			
			.action-list li::before {
				content: "✓";
				position: absolute;
				left: 0;
				color: var(--color-secondary);
				font-weight: bold;
				font-size: 1.2rem;
			}
			
			/* レスポンシブ対応 */
			@media (max-width: 768px) {
				main {
					padding: 1em;
				}
				
				.title h1 {
					font-size: 1.75rem;
				}
				
				.article-description {
					font-size: 1rem;
				}
				
				.action-section {
					padding: 1rem;
					margin: 2rem 0;
				}
				
				.action-section h2 {
					font-size: 1.25rem;
				}
				
				.hero-image img {
					max-height: 200px;
				}
			}
			
			@media (max-width: 480px) {
				.title h1 {
					font-size: 1.5rem;
				}
				
				.hero-image img {
					max-height: 150px;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				{/* 記事本文エリア */}
				<div class="prose">
					{/* タイトルと日付セクション */}
					<div class="title">
						<div class="meta-info">
							{/* カテゴリと攻め/守りバッジ */}
							<div class="badges">
								{categoryInfo && (
									<span class="category-badge">{categoryInfo.name}</span>
								)}
								{badgeType === 'attack' && (
									<span class="badge-attack">攻め</span>
								)}
								{badgeType === 'defense' && (
									<span class="badge-defense">守り</span>
								)}
								{badgeType === 'both' && (
									<span class="badge-both">攻め・守り</span>
								)}
							</div>
							<div class="date">
								{/* 公開日を表示 */}
								<FormattedDate date={pubDate} />
								{/* 更新日がある場合のみ表示 */}
								{
									updatedDate && (
										<div class="last-updated-on">
											最終更新: <FormattedDate date={updatedDate} />
										</div>
									)
								}
							</div>
						</div>
						{/* 記事タイトル */}
						<h1>{title}</h1>
						{/* 記事の説明文 */}
						<p class="article-description">{description}</p>
						{/* ヒーロー画像（小さく表示） */}
						{heroImage && (
							<div class="hero-image">
								{isStringPath ? (
									<img src={heroImage} alt="" />
								) : (
									<Image width={960} height={300} src={heroImage} alt="" />
								)}
							</div>
						)}
						<hr /> {/* 区切り線 */}
					</div>
					{/* <slot />でMarkdownから変換された記事本文を挿入 */}
					<slot />
					
					{/* 今日からできるアクションセクション（actionItemsがある場合） */}
					{actionItems && actionItems.length > 0 && (
						<div class="action-section">
							<h2>★今日からできるアクション</h2>
							<p class="action-intro">
								この記事を読んで、明日からすぐに実行できるアクションをまとめました。
							</p>
							<ul class="action-list">
								{actionItems.map((item) => (
									<li>{item}</li>
								))}
							</ul>
						</div>
					)}
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
