---
// src/pages/blog/index.astro
// ブログ一覧ページ（ルートパス: /blog）
// すべてのブログ記事を日付順（新しい順）で一覧表示します

// Astroの組み込み機能をインポート
import { Image } from 'astro:assets'; // 画像最適化コンポーネント
import { getCollection } from 'astro:content'; // Content Collectionsから記事を取得

// コンポーネントのインポート
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro'; // 日付フォーマット用
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE, CATEGORIES } from '../../consts';

// ブログ記事を取得して日付順（新しい順）にソート
// getCollection('blog')でsrc/content/blog/内のすべての記事を取得
// sort()で公開日（pubDate）の降順にソート
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// heroImageが文字列（publicフォルダのパス）か、画像オブジェクトかを判定するヘルパー関数
// TypeScriptの型ガード関数（型安全性を保証）
const isStringPath = (img: unknown): img is string => typeof img === 'string';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				max-width: 960px;
				margin: 0 auto;
				padding: 2em 1em;
			}
			
			section h1 {
				font-size: 2rem;
				margin-bottom: 2rem;
			}
			
			.post-list {
				list-style: none;
				padding: 0;
				margin: 0;
			}
			
			.post-list li {
				border-bottom: 1px solid var(--color-border);
				padding: 1.5rem 0;
			}
			
			.post-list li:last-child {
				border-bottom: none;
			}
			
			.post-list a {
				display: block;
				text-decoration: none;
				color: inherit;
			}
			
			.post-list a:hover .post-title {
				color: var(--color-primary);
			}
			
			.post-title {
				font-size: 1.25rem;
				margin: 0 0 0.5rem 0;
				color: var(--color-text);
				font-weight: 600;
				transition: color 0.2s ease;
			}
			
			.post-description {
				color: var(--color-text-light);
				margin: 0 0 0.5rem 0;
				line-height: 1.6;
			}
			
			.post-meta {
				display: flex;
				gap: 0.5rem;
				flex-wrap: wrap;
				align-items: center;
				margin-top: 0.5rem;
			}
			
			.post-date {
				color: var(--color-text-light);
				font-size: 0.9rem;
				margin: 0;
			}
			
			.category-badge,
			.badge-attack,
			.badge-defense,
			.badge-both {
				padding: 0.125rem 0.5rem;
				border-radius: 0.25rem;
				font-size: 0.75rem;
				font-weight: 600;
			}
			
			.category-badge {
				background-color: var(--color-primary);
				color: white;
			}
			
			.badge-attack {
				background-color: var(--color-attack);
				color: white;
			}
			
			.badge-defense {
				background-color: var(--color-defense);
				color: white;
			}
			
			.badge-both {
				background: linear-gradient(135deg, var(--color-attack) 50%, var(--color-defense) 50%);
				color: white;
			}
			
			/* レスポンシブ対応 */
			@media (max-width: 768px) {
				main {
					padding: 1em;
				}
				
				section h1 {
					font-size: 1.75rem;
				}
				
				.post-title {
					font-size: 1.125rem;
				}
			}
			
			@media (max-width: 480px) {
				section h1 {
					font-size: 1.5rem;
				}
				
				.post-title {
					font-size: 1rem;
				}
				
				.post-description {
					font-size: 0.9rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h1>Blog</h1>
				{/* 記事一覧を表示 */}
				<ul class="post-list">
					{
						// 各記事をループして表示
						posts.map((post) => (
							<li>
								{/* 記事へのリンク */}
								<a href={`/blog/${post.id}/`}>
									{/* 記事タイトル */}
									<h2 class="post-title">{post.data.title}</h2>
									{/* 記事の説明文 */}
									{post.data.description && (
										<p class="post-description">{post.data.description}</p>
									)}
									{/* メタ情報 */}
									<div class="post-meta">
										{/* 公開日 */}
										<p class="post-date">
											<FormattedDate date={post.data.pubDate} />
										</p>
										{/* カテゴリと攻め/守りバッジ */}
										{CATEGORIES[post.data.category] && (
											<span class="category-badge">{CATEGORIES[post.data.category].name}</span>
										)}
										{post.data.attackOrDefense === 'attack' && (
											<span class="badge-attack">攻め</span>
										)}
										{post.data.attackOrDefense === 'defense' && (
											<span class="badge-defense">守り</span>
										)}
										{post.data.attackOrDefense === 'both' && (
											<span class="badge-both">攻め・守り</span>
										)}
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
