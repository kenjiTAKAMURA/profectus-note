---
// src/components/Header.astro
// サイトのヘッダーコンポーネント
// ナビゲーションメニューとSNSリンクを表示します

import { SITE_TITLE, SOCIAL_LINKS } from '../consts';
import HeaderLink from './HeaderLink.astro'; // ナビゲーションリンクコンポーネント
import ThemeToggle from './ThemeToggle.astro'; // テーマ切り替えボタン
---

<header>
	<nav>
		{/* サイトタイトル（ホームへのリンク） */}
		<h2><a href="/">{SITE_TITLE}</a></h2>
		{/* 内部リンク（ナビゲーションメニュー） */}
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		{/* テーマ切り替えボタンとSNSリンク */}
		<div class="header-actions">
			<ThemeToggle />
			<div class="social-links">
				<a href={SOCIAL_LINKS.twitter} target="_blank" rel="noopener noreferrer">
					<span class="sr-only">Follow on X (Twitter)</span>
					<svg viewBox="0 0 16 16" aria-hidden="true" width="20" height="20">
						<path
							fill="currentColor"
							d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865l8.875 11.633Z"
						></path>
					</svg>
				</a>
			</div>
		</div>
	</nav>
</header>
<style>
	/* ヘッダーのスタイル */
	header {
		margin: 0;
		padding: 1em 0;
		border-bottom: 1px solid var(--color-border);
	}
	
	/* サイトタイトルのスタイル */
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	
	/* ナビゲーションのレイアウト */
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 960px;
		margin: 0 auto;
		padding: 0 1em;
	}
	
	/* サイトタイトルのリンク */
	h2 a {
		color: var(--color-text);
		font-weight: 600;
	}
	
	h2 a:hover {
		color: var(--color-primary);
	}
	
	/* ナビゲーションリンクのコンテナ */
	.internal-links {
		display: flex;
		gap: 1.5rem;
		align-items: center;
	}
	
	/* ナビゲーションリンクのスタイル */
	.internal-links a {
		color: var(--color-text-light);
		text-decoration: none;
		font-size: 0.95rem;
		transition: color 0.2s ease;
	}
	
	/* アクティブなリンクのスタイル */
	.internal-links a.active {
		color: var(--color-text);
		font-weight: 600;
	}
	
	.internal-links a:hover {
		color: var(--color-text);
	}
	
	/* ヘッダーアクション（テーマ切り替えとSNSリンク） */
	.header-actions {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}
	
	/* SNSリンクのレイアウト */
	.social-links {
		display: flex;
		align-items: center;
	}
	
	.social-links a {
		display: flex;
		align-items: center;
		color: var(--color-text);
		transition: color 0.2s ease;
	}
	
	.social-links a:hover {
		color: var(--color-primary);
	}
	
	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border-width: 0;
	}
	
	/* レスポンシブ対応 */
	@media (max-width: 768px) {
		nav {
			flex-wrap: wrap;
			gap: 1rem;
		}
		
		.internal-links {
			order: 3;
			width: 100%;
			justify-content: center;
			gap: 1rem;
		}
		
		h2 {
			order: 1;
		}
		
		.header-actions {
			order: 2;
		}
	}
	
	@media (max-width: 480px) {
		nav {
			padding: 0 0.5em;
		}
		
		.internal-links {
			font-size: 0.875rem;
			gap: 0.75rem;
		}
	}
</style>
